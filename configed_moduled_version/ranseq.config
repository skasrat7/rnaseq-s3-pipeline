// nf-core/rnaseq specific parameters
// ERCC spike-in RNA-seq configuration

params {
    // Alignment and quantification
    aligner                   = 'star_salmon'
    quantification_method     = 'featurecounts'
    strandedness             = 'reverse'
    
    // Trimming parameters
    skip_trimming            = false
    clip_r2                  = 16
    extra_trimgalore_args    = '--length 50'
    
    // QC and reporting (set to true to skip)
    skip_fastqc              = false  // Set true to skip FastQC
    skip_qualimap            = false   // Skip Qualimap (saves time/resources)
    skip_dupradar            = false   // Skip dupRadar (saves time)
    skip_preseq              = false   // Skip Preseq
    skip_rseqc               = false  // Keep RSeQC for important metrics
    skip_biotype_qc          = false  // Keep for ERCC analysis
    skip_deseq2_qc           = false   // Skip if you don't need DESeq2 QC
    skip_multiqc             = false  // Keep MultiQC summary
    
    // Output saving options
    save_trimmed             = false
    save_unaligned           = false
    save_intermediates       = false
    save_reference           = true
    save_align_intermeds     = true
    save_merged_fastq        = true
    save_unaligned_fastq     = false
    save_trimmed_fastq       = true
    save_salmon_tpm          = true
    save_salmon_counts       = true
    // Saving the deduplicated BAM files
    save_markduplicates_bam  = true    // This saves the deduplicated BAM files
    skip_markduplicates      = false   // Make sure deduplication is not skipped

    // Additional analysis
    biotype_annotation       = true
    picard_metrics           = true
    extra_picard_args        = 'COLLECT_INSERT_SIZE_METRICS=true VALIDATION_STRINGENCY=LENIENT'
    
    // ERCC-specific parameters
    ercc_analysis            = true
    separate_ercc_counts     = true
}
